{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "classValidatorShim": true,
          "controllerFileNameSuffix": [
            ".controller.ts"
          ],
          "dtoFileNameSuffix": [
            ".request.ts",
            ".transformer.ts"
          ]
        }
      }
    ]
  }
}
